{
    "name": "@app/server",
    "private": true,
    "scripts": {
        "start": "dotenv -c production -- ts-node-dev -r tsconfig-paths/register --transpile-only ./src/index.ts",
        "dev": "dotenv -c development -- ts-node-dev --watch ./src/features -r tsconfig-paths/register --rs --transpile-only --no-notify --exit-child ./src/index.ts",
        "build": "yarn exec scripts/build.sh",
        "add-feat": "ts-node-dev --script-mode ./scripts/add-feature.ts",
        "typecheck": "tsc -p tsconfig.prod.json --noEmit",
        "prod": "dotenv -e .env.production -- yarn node -r module-alias/register build/index.js",
        "generate": "yarn pnpify prisma generate",
        "lint": "eslint \"src/**\"",
        "prisma-db-push": "prisma db push --skip-generate",
        "prisma-db-seed": "prisma db seed",
        "prisma-migrate-dev": "prisma migrate dev --skip-generate",
        "prisma-migrate-deploy": "prisma migrate deploy",
        "test:prisma-db-push": "dotenv -c test yarn prisma-db-push",
        "test:unit": "dotenv -c test -- jest \"src/.*\\.unit\\.test\\.ts\" --detectOpenHandles --runInBand",
        "test:integration": "dotenv -c test -- jest \"src/.*\\.integration\\.test\\.ts\" --detectOpenHandles --runInBand",
        "test:all": "dotenv -c test -- jest \"src/.*.test\\.ts\" --detectOpenHandles --runInBand",
        "test:coverage": "dotenv -c test -- jest --coverage",
        "test:ci": "yarn generate && yarn g:start-test-db && yarn test:prisma-db-push && yarn test:all"
    },
    "prisma": {
        "seed": "ts-node-dev ./prisma/seed.ts"
    },
    "dependencies": {
        "@google-cloud/pubsub": "2.17.0",
        "@graphql-tools/load-files": "^6.3.2",
        "@graphql-tools/merge": "^6.2.13",
        "@graphql-tools/schema": "^7.1.3",
        "@prisma/client": "^4.7.0",
        "altair-fastify-plugin": "^4.0.2",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "dotenv-cli": "^4.0.0",
        "dotenv-expand": "^5.1.0",
        "fastify": "^3.25.3",
        "fastify-cookie": "^5.3.0",
        "fastify-cors": "^6.0.2",
        "fastify-multipart": "^5.3.1",
        "form-data": "^4.0.0",
        "graphql": "^15.5.0",
        "graphql-relay": "0.9.0",
        "jsonwebtoken": "^8.5.1",
        "mailgun.js": "^3.4.0",
        "mercurius": "^7.6.1",
        "mercurius-codegen": "^1.6.1",
        "module-alias": "^2.2.2",
        "mqemitter": "^4.5.0",
        "mqemitter-redis": "^4.2.0",
        "pino-pretty": "^7.1.0",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2",
        "@types/cors": "^2",
        "@types/eslint": "^7",
        "@types/jest": "^27.4.1",
        "@types/jsonwebtoken": "^8",
        "@types/mailgun-js": "^0.22.11",
        "@types/module-alias": "^2.0.1",
        "@types/node": "^15.0.1",
        "@types/supertest": "^2.0.12",
        "@types/uuid": "^8",
        "@typescript-eslint/eslint-plugin": "^5.12.0",
        "@typescript-eslint/parser": "^5.12.0",
        "@yarnpkg/pnpify": "^3.1.1-rc.15",
        "eslint": "^8.9.0",
        "eslint-config-airbnb-typescript": "^16.1.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-node": "^0.3.6",
        "eslint-plugin-import": "^2.25.4",
        "jest": "^27.5.1",
        "jest-mock-extended": "^2.0.5",
        "mercurius-integration-testing": "^4.0.0",
        "prisma": "^4.7.0",
        "supertest": "^6.2.3",
        "ts-jest": "^27.1.4",
        "ts-node-dev": "^1.1.6",
        "tsconfig-paths": "^3.9.0",
        "typescript": "4.3.2"
    },
    "_moduleAliases": {
        "@local": "./build"
    }
}
