        "@graphql-tools/schema": "^7.1.3",
        "@prisma/client": "^3.3.0",
        "altair-fastify-plugin": "^4.0.2",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "fastify": "^3.15.1",
        "fastify-cookie": "^5.3.0",
        "fastify-cors": "^6.0.2",
        "fastify-multipart": "^4.0.7",
        "form-data": "^4.0.0",
        "graphql": "^15.5.0",
        "graphql-relay": "^0.9.0",
        "jsonwebtoken": "^8.5.1",
        "mailgun.js": "^3.4.0",
        "mercurius": "^7.6.1",
