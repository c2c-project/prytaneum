        "@types/node": "^15.0.1",
        "dotenv": "^8.2.0",
        "dotenv-cli": "^4.0.0",
        "dotenv-expand": "^5.1.0",
        "prisma": "^3.4.0",
        "ts-node-dev": "^1.1.6",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.2.4"
    },
    "_moduleAliases": {
        "@local": "./src"
