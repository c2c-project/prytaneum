{
    "name": "@app/e2e",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "test:e2e": "playwright test && yarn allure:generate-report",
        "test:e2e:ci": "dotenv -v CI=1 -- yarn run test:e2e",
        "test:e2e:headed": "playwright test --headed && yarn allure:generate-report",
        "allure:generate-report": "allure generate ./allure-results --clean",
        "allure:report": "allure open ./allure-report"
    },
    "devDependencies": {
        "@playwright/test": "^1.21.1",
        "allure-commandline": "^2.17.2",
        "dotenv-cli": "^5.1.0",
        "experimental-allure-playwright": "^0.0.3",
        "playwright": "^1.21.1",
        "typescript": "4.3.2"
    }
}
