{
    "compilerOptions": {
        "target": "es5",
        "lib": ["DOM", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "baseUrl": "src"
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "**/src/test/*",
        "**/*.test.ts",
        "**/__tests__/*",
        "**/__mocks__/*",
        "**/*+(index|.spec|.e2e).ts"
    ],
    "typedocOptions": {
		"mode": "modules",
        "out": "docs",
        "excludeNotExported": true,
          "exclude": [
            "**/*.test.ts",
            "**/*.stories.*",
            "**/*+(index|.spec|.e2e).ts"
        ],
        "categoryOrder": ["components", "hooks", "*"],
        
	},
}
